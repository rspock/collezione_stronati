<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Collezione Enrico e Rosita Stronati{% endblock %}</title>

        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
        <link  href="{{asset("bundles/collezionestronati/css/bootstrap.min.css")}}" rel="stylesheet" type="text/css" />
        <link  href="{{asset("bundles/collezionestronati/css/font-awesome.min.css")}}" rel="stylesheet" type="text/css" />
        <!-- Ionicons -->
        <link  href="{{asset("bundles/collezionestronati/css/ionicons.min.css")}}" rel="stylesheet" type="text/css" />
        <!-- Morris chart -->
        <link  href="{{asset("bundles/collezionestronati/css/morris/morris.css")}}" rel="stylesheet" type="text/css" />
        <!-- jvectormap -->
        <link  href="{{asset("bundles/collezionestronati/css/jvectormap/jquery-jvectormap-1.2.2.css")}}" rel="stylesheet" type="text/css" />
        <!-- Date Picker -->
        <link  href="{{asset("bundles/collezionestronati/css/datepicker/datepicker3.css")}}" rel="stylesheet" type="text/css" />
        <!-- Daterange picker -->
        <link  href="{{asset("bundles/collezionestronati/css/daterangepicker/daterangepicker-bs3.css")}}" rel="stylesheet" type="text/css" />
        <!-- bootstrap wysihtml5 - text editor -->
        <link  href="{{asset("bundles/collezionestronati/css/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css")}}" rel="stylesheet" type="text/css" />
        <!-- Theme style -->
        <link  href="{{asset("bundles/collezionestronati/css/AdminLTE.css")}}" rel="stylesheet" type="text/css" />

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->

        {% block stylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="skin-blue">
        {% block  body %}
            <!-- header logo: style can be found in header.less -->
            <header class="header">
                <a href="{{ path('home') }}" class="logo">
                    Collezione Stronati
                </a>
                <!-- Header Navbar: style can be found in header.less -->
                <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                    <div class="navbar-right">
                        {% if is_granted('ROLE_USER') %}
                        <ul class="nav navbar-nav">

                            <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="glyphicon glyphicon-user"></i>
                                <span>{{ app.user.username }} <i class="caret"></i></span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header bg-light-blue">
                                    <p>
                                        Ciao Utente:
                                        {{ app.user.username }}
                                        {% if isClient %}
                                        <br>
                                        Sei su un dispositivo client
                                        <br>
                                        Nome: {{ clientName }}
                                        {% endif %}
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                <li class="user-body">

                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    {% if isClient %}
                                    <div class="pull-left">
                                        <a href="{{ path('sincronizza') }}" class="btn btn-default btn-flat">Sincronizza</a>
                                    </div>
                                    {% endif %}
                                    <div class="pull-right">
                                        <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-flat">Esci</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        </ul>
                        {% endif %}
                    </div>
                </nav>
            </header>
            {% block sottobarra %}
            <div class="wrapper row-offcanvas row-offcanvas-left">

                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1>
                        Collezione Stronati Enrico e Rosita
                        <small>
                            {% if nomePagina is defined %}
                                {{ nomePagina }}
                            {% endif %}
                        </small>
                    </h1>
                </section>

                <!-- Main content -->
                <section class="content">
                {% block flashMessage %}
                    {% set errori =   app.session.flashbag.get('error')%}
                    {% if errori %}
                        <div class="alert alert-danger alert-dismissable">
                        <i class="fa fa-ban"></i>
                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                            {% for errorFlashMessage in errori %}
                                <b>Errore! </b> {{ errorFlashMessage }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                    <br>
                {% endblock flashMessage%}
                <!-- Small boxes (Stat box) -->
                <div class="row">
                    <div class="col-lg-2 col-xs-6">
                        <!-- small box -->
                        <div class="small-box bg-aqua">
                            <div class="inner">
                                <h3>
                                    {{ conteggio_mignon }}
                                </h3>
                                <p>
                                   Mignon
                                </p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-pricetag"></i>
                            </div>
                            <a href="{{ path('mignon') }}" class="small-box-footer">
                                Elenco <i class="fa fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div><!-- ./col -->
                    <div class="col-lg-2 col-xs-6">
                        <!-- small box -->
                        <div class="small-box bg-green">
                            <div class="inner">
                                <h3>
                                    {{ conteggio_profumi }}
                                </h3>
                                <p>
                                    Profumi
                                </p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-beaker"></i>
                            </div>
                            <a href="{{ path('profumo') }}" class="small-box-footer">
                                Elenco <i class="fa fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div><!-- ./col -->
                    <div class="col-lg-2 col-xs-6">
                        <!-- small box -->
                        <div class="small-box bg-yellow">
                            <div class="inner">
                                <h3>
                                    {{ conteggio_bicchieri }}
                                </h3>
                                <p>
                                    Bicchieri
                                </p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-wineglass"></i>
                            </div>
                            <a href="{{ path('bicchiere') }}" class="small-box-footer">
                                Elenco <i class="fa fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div><!-- ./col -->
                    <div class="col-lg-2 col-xs-6">
                        <!-- small box -->
                        <div class="small-box bg-red">
                            <div class="inner">
                                <h3>
                                    Ricerca
                                </h3>
                                <p>
                                    Ricerca un oggetto
                                </p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-search"></i>
                            </div>
                            <a href="#" class="small-box-footer">
                                Ricerca <i class="fa fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div><!-- ./col -->
                    <div class="col-lg-2 col-xs-6">
                        <!-- small box -->
                        <div class="small-box bg-blue">
                            <div class="inner">
                                <h3>
                                    Cataloga
                                </h3>
                                <p>
                                    Cataloga nuovi oggetti
                                </p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-plus-circled"></i>
                            </div>
                            <a href="{{ path('cataloga_immagini') }}" class="small-box-footer">
                                Cataloga <i class="fa fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div><!-- ./col -->
                    <div class="col-lg-2 col-xs-6">
                        <!-- small box -->
                        <div class="small-box bg-maroon">
                            <div class="inner">
                                <h3>
                                    Carica
                                </h3>
                                <p>
                                    Carica nuove foto
                                </p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-upload"></i>
                            </div>
                            <a href="{{ path('pagina_caricamento') }}" class="small-box-footer">
                                Carica <i class="fa fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div><!-- ./col -->
                </div><!-- /.row -->

                <!-- Main row -->
                <div class="row">
                    <div class="col-lg-12">
                    {% block container %}

                    {% endblock container %}
                    </div>
                </div><!-- /.row (main row) -->

                </section><!-- /.content -->
                {% block footer %}
                {% endblock footer %}
            </div><!-- ./wrapper -->
        {% endblock sottobarra %}

            <!-- add new calendar event modal -->
            <script src="{{asset("bundles/collezionestronati/js/jquery.min.js")}}"></script>
            <script src="{{asset("bundles/collezionestronati/js/bootstrap.min.js")}}" type="text/javascript"></script>
            <script src="{{asset("bundles/collezionestronati/js/jquery-ui.min.js")}}" type="text/javascript"></script>
            <!-- Morris.js charts -->
            <script src="{{asset("bundles/collezionestronati/js/raphael-min.js")}}"></script>
            <script src="{{asset("bundles/collezionestronati/js/plugins/morris/morris.min.js")}}" type="text/javascript"></script>
            <!-- Sparkline -->
            <script src="{{asset("bundles/collezionestronati/js/plugins/sparkline/jquery.sparkline.min.js")}}" type="text/javascript"></script>
            <!-- jvectormap -->
            <script src="{{asset("bundles/collezionestronati/js/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js")}}" type="text/javascript"></script>
            <script src="{{asset("bundles/collezionestronati/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js")}}" type="text/javascript"></script>
            <!-- jQuery Knob Chart -->
            <script src="{{asset("bundles/collezionestronati/js/plugins/jqueryKnob/jquery.knob.js")}}" type="text/javascript"></script>
            <!-- daterangepicker -->
            <script src="{{asset("bundles/collezionestronati/js/plugins/daterangepicker/daterangepicker.js")}}" type="text/javascript"></script>
            <!-- datepicker -->
            <script src="{{asset("bundles/collezionestronati/js/plugins/datepicker/bootstrap-datepicker.js")}}" type="text/javascript"></script>
            <!-- Bootstrap WYSIHTML5 -->
            <script src="{{asset("bundles/collezionestronati/js/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js")}}" type="text/javascript"></script>
            <!-- iCheck -->
            <script src="{{asset("bundles/collezionestronati/js/plugins/iCheck/icheck.min.js")}}" type="text/javascript"></script>

            <!-- AdminLTE App -->
            <script src="{{asset("bundles/collezionestronati/js/AdminLTE/app.js")}}" type="text/javascript"></script>
            {% block javascripts %}
            {% endblock %}
        {% endblock %}
    </body>
</html>
